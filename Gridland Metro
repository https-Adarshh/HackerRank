#include <iostream>
#include <vector>
#include <map>
#include <algorithm>

using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    long long n, m, k;
    cin >> n >> m >> k;

    map<long long, vector<pair<long long, long long>>> trackMap;

    for (long long i = 0; i < k; i++) {
        long long r, c1, c2;
        cin >> r >> c1 >> c2;
        trackMap[r].push_back({c1, c2});
    }

    long long totalCovered = 0;

    for (auto &row : trackMap) {
        auto &intervals = row.second;
        if (intervals.empty()) continue;

        sort(intervals.begin(), intervals.end());  

        long long start = intervals[0].first;
        long long end   = intervals[0].second;

        for (int i = 1; i < (int)intervals.size(); i++) {
            if (intervals[i].first <= end) {
                
                end = max(end, intervals[i].second);
            } else {
                
                totalCovered += (end - start + 1);
                start = intervals[i].first;
                end   = intervals[i].second;
            }
        }

       
        totalCovered += (end - start + 1);
    }

    long long totalCells = n * m;
    cout << (totalCells - totalCovered) << '\n';

    return 0;
}
